<%= render 'pages/header' %>
<%= @message %>
<div class="ui form center_form user_info">
    <%= form_for @user do |f| %>
        <div class="field">
            <%= f.label 'email', 'Email' %>
            <%= f.text_field 'email' %>
        </div>
        <div class="field">
            <%= f.label 'first_name', 'First Name' %>
            <%= f.text_field 'first_name' %>
        </div>
        <div class="field">
            <%= f.label 'last_name', 'Last Name' %>
            <%= f.text_field 'last_name' %>
        </div>
        <div class="field">
            <%= f.label 'birthday', 'Birthday' %>
            <%= f.text_field 'birthday' %>
        </div>
        <div class="field">
            <%= f.label 'city', 'City' %>
            <%= f.text_field 'city' %>
        </div>
        <div class="field">
            <%= f.label 'province', 'Province' %>
            <%= f.text_field 'province' %>
        </div>
        <div class="field">
            <%= f.label 'country', 'Country' %>
            <%= f.text_field 'country', value: 'Canada' %>
        </div>
        <%= f.submit 'Update info', class: 'ui tiny button' %>
    <% end %>
</div>