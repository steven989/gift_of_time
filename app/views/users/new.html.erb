<%= form_for @user do |f| %>
    <div class="field">
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, 'Password confirmation' %>
        <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit 'Sign up now' %>
<% end %>