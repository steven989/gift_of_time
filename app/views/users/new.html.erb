<%= render 'pages/header' %>
<div class="ui form segment center_form">
    <%= form_for @user do |f| %>
        <div class="field">
            <%= f.label :email, 'Email' %>
            <%= f.text_field :email %>
        </div>
        <div class="field">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password %>
        </div>
        <div class="field">
            <%= f.label :password_confirmation, 'Password confirmation' %>
            <%= f.password_field :password_confirmation %>
        </div>
        <%= f.submit 'Sign up now', class: 'ui tiny button' %>
    <% end %>
</div>