<div class="header">
    <%= link_to root_path do %>
        <div class="logo">LOGO</div>
    <% end %>
    <div class="nav">        
        <% if !current_user %>
            <%= link_to new_session_path do %>
                <div class="nav_button" id="login">Login</div>
            <% end %>
            <%= link_to new_user_path do %>
                <div class="nav_button" id="signup">Sign up</div>
            <% end %>
        <% else %>
            <div class="nav_button" id='user'>
                <%= current_user.display_name %>
                <%= render 'users/profile_menu' %>
            </div>
        <% end %>   
        <%= link_to volunteers_path do %>
            <div class="nav_button" id="volunteer">Volunteer resources</div>
        <% end %>
        <%= link_to new_gift_path do %>
            <div class="nav_button" id="new_gift">Design a gift</div>
        <% end %>
        <div class="find_gift">
            <div class="ui form">
            <%= form_tag gift_path('current'), method: 'GET' do %>
                <div class="field">
                    <%= text_field_tag 'gift_id', nil, placeholder: 'Enter gift number' %>
                </div>
                <%= submit_tag 'Find your gift', class: "ui tiny button" %>
            <% end %>

            </div>
        </div>
    </div>
</div>